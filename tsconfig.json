{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "target": "esnext",
    "module": "ESNext",
    "lib": ["esnext"],
    "moduleResolution": "node",
    "strict": false,
    "rootDir": "./ts",
    "outDir": "./lua",
    "types": ["nvim-types/0.5.0-nightly"],
    "resolveJsonModule": true
  },
  "tstl": {
    "luaTarget": "JIT",
    "noImplicitSelf": true
  }
}
